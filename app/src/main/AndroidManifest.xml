<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rharasimiuk.djangorestlearn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Cavyrinth"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HuntActivity"
            android:label="Hunt"
            android:screenOrientation="portrait" />
        <activity
            android:name=".FightActivity"
            android:label="Battle"
            android:screenOrientation="portrait" />
        <activity
            android:name=".QuestsActivity"
            android:label="Quests"
            android:screenOrientation="portrait" />
        <activity
            android:name=".EquipmentActivity"
            android:label="Equipment"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ShopActivity"
            android:label="Shop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SkillsActivity"
            android:label="Skills"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DepotActivity"
            android:label="Depot"
            android:screenOrientation="portrait" />
    </application>

</manifest>