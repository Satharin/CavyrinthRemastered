<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="#575757"
    tools:context="com.example.rharasimiuk.djangorestlearn.MainActivity">

    <TextView
        android:id="@+id/showtext"
        android:layout_width="wrap_content"
        android:layout_height="455dp"
        android:layout_above="@+id/buttonHunt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:scrollbars="vertical"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/buttonHunt"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="175dp"
        android:onClick="hunt"
        android:text="Hunt" />

    <Button
        android:id="@+id/buttonStats"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonHunt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-175dp"
        android:onClick="statistics"
        android:text="Statistics" />

    <Button
        android:id="@+id/buttonExp"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonStats"
        android:layout_centerHorizontal="true"
        android:onClick="exptable"
        android:text="Exp Table" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonExp"
        android:layout_centerHorizontal="true"
        android:onClick="exitGame"
        android:text="Exit" />


</RelativeLayout>